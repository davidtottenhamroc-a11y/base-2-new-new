{
  "rewrites": [

    {
      "source": "/",
      "destination": "/index.html" 
      // Se sua tela de login se chama 'login.html', use: "/login.html"
    },
    

    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    
    {
      "source": "/(.*)\\.html",
      "destination": "/$1.html"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}

